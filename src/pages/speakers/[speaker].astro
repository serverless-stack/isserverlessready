---
import config from "../../config";
import speakers from "../../speakers";

import Layout from "../../layouts/Layout.astro";

import bun from "../../images/companies/bun.png";
import jarred from "../../images/speakers/jarred.png";
import jarredName from "../../images/speakers/jarred-name.png";

import planetscale from "../../images/companies/planetscale.png";
import fred from "../../images/speakers/fred.png";
import fredName from "../../images/speakers/fred-name.png";

import twitterIcon from "../../images/twitter.svg";

interface SpeakerImage {
  src: string;
  width: string;
  height: string;
}

export function getStaticPaths() {
  const imagesMap: Record<string, Record<string, SpeakerImage>> = {
    jarredsumner: {
      logo: { src: bun, width: "234", height: "92", },
      profile: { src: jarred, width: "524", height: "554", },
      name: { src: jarredName, width: "544", height: "67", },
    },
    isamlambert: {
      logo: { src: planetscale, width: "324", height: "81", },
      profile: { src: fred, width: "616", height: "575", },
      name: { src: fredName, width: "535", height: "68", },
    },
  };
  return Object.keys(speakers).map(speaker => {
    return {
      params: {speaker},
      props: {speaker: speakers[speaker], img: imagesMap[speaker]}
    };
  });
}

const { speaker, img } = Astro.props;
---
<style define:vars={{ speakerColor: speaker.color }}>
  .hero {
    box-sizing: border-box;
    padding-top: 20rem;
    width: 100vw;
    height: auto;
    position: relative;
    background-size: cover;
    background-position: 50% 50%;
    background-image: url('../../images/hero-bg.png');
  }
  header {
    text-align: center;
  }
  .home:hover {
    text-decoration: none;
  }
  h3 {
    margin: 0;
    color: var(--theme-text);
    text-transform: uppercase;
    font-size: 28rem;
    text-shadow:
      -1px -1px 0 var(--theme-accent),
      1px 2px 0 hsla(267, 12%, 39%, 1);
  }
  .main {
    color: var(--theme-text-lighter);
  }
  .separator {
    margin: 0 7rem;
    color: var(--theme-text-lighter);
  }
  h1 {
    margin: 0;
    display: inline;
    font-size: 14rem;
    line-height: 14rem;
    font-family: var(--font-body);
    font-weight: normal;
  }
  section {
    box-sizing: border-box;
    padding: var(--spacing-unit) calc(var(--spacing-unit) * 2) calc(var(--spacing-unit) * 2);
    display: flex;
    align-items: center;
  }
  .content {
    margin-left: calc(var(--spacing-unit) * 1.5);
    display: flex;
    flex-direction: column;
  }
  h4 {
    margin: 0 0 2rem;
    font-size: 33rem;
    font-weight: bold;
    line-height: 38rem;
    font-family: var(--font-body);
    color: var(--speakerColor);
    text-shadow: 3px 1px 0 #000;
  }
  h4 a {
    margin-left: -5px;
    vertical-align: -2px;
  }
  .content h2 {
    margin: 64rem 0 0;
    font-family: var(--font-body);
    font-weight: bold;
    font-style: italic;
    font-size: 48rem;
    line-height: 56rem;
    text-transform: uppercase;
  }
  .content p {
    line-height: 1.25;
    color: var(--theme-text-light);
  }
</style>
<Layout>
  <title slot="title">{speaker.name} / {config.title}</title>
  <div class="hero">
    <header>
      <a href="/" class="home"><h3>{config.title}</h3></a>
      <a href="/" class="main">Main</a><span class="separator">&bull;</span><h1>{speaker.name}</h1>
    </header>
    <section>
      <div class="image">
        <img src={img.profile.src} width={img.profile.width} height={img.profile.height} alt={speaker.name} />
      </div>
      <div class="content">
        <a target="_blank" href={speaker.link}>
          <img src={img.logo.src} width={img.logo.width} height={img.logo.height} alt={speaker.company} />
        </a>
        <a target="_blank" href={`https://twitter.com/${speaker.twitter}`}>
          <img src={img.name.src} width={img.name.width} height={img.name.height} alt={speaker.name} />
        </a>
        <h4>
          <span>{speaker.title}</span>
          <a target="_blank" href={`https://twitter.com/${speaker.twitter}`}>
            <img src={twitterIcon} width="24" height="24" />
          </a>
        </h4>
        <h2>&ldquo;{speaker.talkTitle}&rdquo;</h2>
        <p>{speaker.talkDescription}</p>
      </div>
    </section>
  </div>
</Layout>